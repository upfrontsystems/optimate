<html>

    <link rel="stylesheet" tal:attributes="href string:${request.application_url}/static/css/reports.css">
    <span tal:replace='structure string:<style>'/>
        /* The default style */
        @page {
            @frame {
                margin: 2cm;
                top :4.6cm;
            }
            @frame header {
                -pdf-frame-content: headerContent;
                top :1cm;
                margin-left: 2cm;
                margin-right: 2cm; 
                height: 5.2cm;
            }
            @frame footer {
                -pdf-frame-content: pageNumber;
                height: 1cm;
                bottom: 1cm;
                margin-left: 2cm;
                margin-right: 2cm;
            }
        }
    <span tal:replace='structure string:</style>'/>

<body>
    <div id="headerContent">
        <h1>Valuation for Certificate #</h1>
        <table class="order-font">
            <tr></tr>
            <tr>
                <td style="width: 150px">To:</td>
                <td class="bold" style="width: 200px; text-align:left" tal:content="client.Name|nothing"></td>
            </tr>
            <tr>
                <td style="width: 150px">Date</td>
                <td class="bold" style="width: 200px; text-align:left">${print_date}</td>
            </tr>
            <tr>
                <td style="width: 150px">Project</td>
                <td class="bold" style="width: 200px; text-align:left">${valuation.Project.Name}</td>
            </tr>
        </table>
        <div>&nbsp;</div>
        <table class="order-font">
            <tr style="border-top: 1px solid #000;">
                <td></td>
            </tr>
            <tr style="border-bottom: 1px solid #000;">
                <th class="bold" style="width: 450px; text-align:left">Details</th>
                <th class="bold" style="width: 120px; text-align:right">${valuation_date}</th> 
                <th class="bold" style="width: 90px; text-align:right">% Claim</th>
                <th class="bold" style="width: 120px; text-align:right">Total</th>
            </tr>
        </table>
    </div>
    <table class="order-font">
        <tr tal:repeat="valuation_item valuation_items">
            <td style="width: 450px" tal:content="valuation_item['name']|nothing"></td>
            <td style="width: 120px; text-align:right" tal:content="valuation_item['total_budget']|nothing"></td>
            <td style="width: 90px; text-align:right" tal:content="valuation_item['percentage_complete']|nothing"></td>
            <td style="width: 120px; text-align:right" tal:content="valuation_item['amount_complete']|nothing"></td>
        </tr>
        <tr style="border-bottom: 1px solid #000;">
            <td></td>
        </tr>
        <tr style="padding-top: 6px;">
            <td style="width: 450px; text-align:right">NETT COST Excl. VAT</td>
            <td style="width: 120px; text-align:right" tal:content="budget_total|nothing"></td>
            <td style="width: 90px; text-align:right"></td>
            <td style="width: 120px; text-align:right" tal:content="valuation.Total|nothing"></td>
        </tr>
        <tr style="border-top: 1px solid #000;">
            <td></td>
        </tr>
    </table>

    <div id="pageNumber">
        <pdf:pagenumber>
    </div>
</body>
</html>
