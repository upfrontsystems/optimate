<html>

    <link rel="stylesheet" tal:attributes="href string:${request.application_url}/static/css/reports.css">
    <span tal:replace='structure string:<style>'/>
        /* The default style */
        @page {
            @frame {
                margin: 2cm;
                top :4.6cm;
            }
            @frame header {
                -pdf-frame-content: headerContent;
                top :1cm;
                margin-left: 2cm;
                margin-right: 2cm;
                height: 5.2cm;
            }
            @frame footer {
                -pdf-frame-content: pageNumber;
                height: 1cm;
                bottom: 1cm;
                margin-left: 2cm;
                margin-right: 2cm;
            }
        }
    <span tal:replace='structure string:</style>'/>

<body>
    <div id="headerContent">
        <h1>Valuation for Certificate #</h1>
        <table class="order-font">
            <tr></tr>
            <tr>
                <td style="width: 60px">To:</td>
                <td class="bold" style="width: 400px; text-align:left" tal:content="client.Name|nothing"></td>
            </tr>
            <tr>
                <td style="width: 60px">Date</td>
                <td class="bold" style="width: 400px; text-align:left">${valuation_date}</td>
            </tr>
            <tr>
                <td style="width: 60px">Project</td>
                <td class="bold" style="width: 400px; text-align:left">${valuation.Project.Name}</td>
            </tr>
        </table>
        <div>&nbsp;</div>
        <table class="order-font">
            <tr style="border-top: 1px solid #000;">
                <td></td>
            </tr>
            <tr style="border-bottom: 1px solid #000;">
                <th class="bold" style="width: 300px; text-align:left">Details</th>
                <th class="bold" style="width: 200px; text-align:right">${valuation_date}</th>
                <th class="bold" style="width: 80px; text-align:right">% Claim</th>
                <th class="bold" style="width: 200px; text-align:right">Total</th>
            </tr>
        </table>
    </div>
    <table class="order-font">
        <tr tal:repeat="valuation_item valuation_items">
            <td style="width: 300px" tal:content="valuation_item['Name']|nothing"></td>
            <td style="width: 200px; text-align:right">R${valuation_item['TotalBudget']|nothing}</td>
            <td style="width: 80px; text-align:right" tal:content="valuation_item['PercentageComplete']|nothing"></td>
            <td style="width: 200px; text-align:right">R${valuation_item['AmountComplete']|nothing}</td>
        </tr>
        <tr style="border-bottom: 1px solid #000;">
            <td></td>
        </tr>
        <tr style="padding-top: 6px;">
            <td style="width: 300px; text-align:right">Total</td>
            <td style="width: 200px; text-align:right">R${budget_total|nothing}</td>
            <td style="width: 80px; text-align:right"></td>
            <td style="width: 200px; text-align:right">R${valuation.Total|nothing}</td>
        </tr>
        <tr style="border-top: 1px solid #000;">
            <td></td>
        </tr>
    </table>

    <div id="pageNumber">
        <pdf:pagenumber>
    </div>
</body>
</html>
