<html>

    <link rel="stylesheet" tal:attributes="href string:${request.application_url}/static/css/reports.css">
    <span tal:replace='structure string:<style>'/>
        /* The default style */
        @page {
            @frame {
                margin: 2cm;
                top :2.5cm;
                bottom: 1cm;
            }
            @frame header {
                -pdf-frame-content: headerContent;
                top :2cm;
                margin-left: 2cm;
                margin-right: 2cm; 
                height: 2.5cm;
            }
            @frame footer {
                -pdf-frame-content: pageNumber;
                height: 1.5cm;
                bottom: 1cm;
                margin-left: 2cm;
                margin-right: 2cm;
            }
        }
    <span tal:replace='structure string:</style>'/>

<body>
    <div id="headerContent">
        <h1>Project Budget for ${project_name}</h1>
        <table>
            <tr style="border-top: 1px solid #000; border-bottom: 1px solid #000; padding-top: 6px; padding-bottom: 3px;">
                <td class="project-heading-font" style="width: 450px; text-align:left">Description</td>
                <td class="project-heading-font" style="width: 70px; text-align:right">Unit</td>
                <td class="project-heading-font" style="width: 70px; text-align:right">Quantity</td>
                <td class="project-heading-font" style="width: 70px; text-align:right">Rate</td>
                <td class="project-heading-font" style="width: 70px; text-align:right">Total</td>
            </tr>
        </table>
    </div>
    
    <table>
        <tal:repeat tal:repeat="node nodes">
            <tal:entry tal:condition="node">
                <tal:bg tal:condition="node[0].type == 'BudgetGroup'">
                <tr style="border-top: 1px solid #000; border-bottom: 1px solid #000; padding-top: 6px; padding-bottom: 3px;">
                    <td class="${node[1]} ${node[2]}" style="width: 450px" tal:content="node[0].Name|nothing">
                    </td>
                    <td class="${node[2]}" style="width: 70px; text-align:right" tal:content="node[0].Unit|nothing"></td>
                    <td class="${node[2]}" style="width: 70px; text-align:right" tal:content="node[0].Quantity|nothing"></td>
                    <td class="${node[2]}" style="width: 70px; text-align:right" tal:content="node[0].Rate|nothing"></td>
                    <td class="${node[2]}" style="width: 70px; text-align:right" tal:content="node[0].Total|nothing"></td>
                </tr>
                </tal:bg>
                <tal:bg tal:condition="node[0].type != 'BudgetGroup'">
                    <tr>
                        <tal:entry tal:condition="node">
                            <td class="${node[1]} ${node[2]}" style="width: 450px" tal:content="node[0].Name|nothing">
                            </td>
                        </tal:entry>
                        <tal:seperator tal:condition="node == None">
                            <td>&nbsp;</td>
                        </tal:seperator>
                        <td class="${node[2]}" style="width: 70px; text-align:right" tal:content="node[0].Unit|nothing"></td>
                        <td class="${node[2]}" style="width: 70px; text-align:right" tal:content="node[0].Quantity|nothing"></td>
                        <td class="${node[2]}" style="width: 70px; text-align:right" tal:content="node[0].Rate|nothing"></td>
                        <td class="${node[2]}" style="width: 70px; text-align:right" tal:content="node[0].Total|nothing"></td>
                    </tr>
                </tal:bg>
            </tal:entry>
            <tal:seperator tal:condition="node == None">
                <td>&nbsp;</td>
            </tal:seperator>
        </tal:repeat>
    </table>

    <div id="pageNumber">
        <table>
            <tr>
                <td style="text-align:left; width: 800px;"><h3>Project Budget for ${project_name}</h3></td>
                <td style="text-align:right;"><h3>${print_date}</h3></td>
            </tr>
        </table>
        <pdf:pagenumber>
    </div>

</body>
</html>
