<html>

    <link rel="stylesheet" tal:attributes="href string:${request.application_url}/static/css/reports.css">
    <span tal:replace='structure string:<style>'/>
        /* The default style */
        /* -pdf-frame-border: true; */
        @page {
            size: a4 landscape;
            @frame {
                -pdf-frame-content: content;                
                margin: 2cm;
                top :1.8cm;
                margin-left: 2cm;
                margin-right: 2cm; 
            }
            @frame header {
                -pdf-frame-content: headerContent;
                top :1cm;
                margin-left: 2cm;
                margin-right: 2cm; 
                height: 3.2cm;
            }
            @frame footer {
                -pdf-frame-content: pageNumber;
                height: 1cm;
                bottom: 1cm;
                margin-left: 2cm;
                margin-right: 2cm;
            }
        }
    <span tal:replace='structure string:</style>'/>

<body>
