<html>

    <link rel="stylesheet" tal:attributes="href string:${request.application_url}/static/css/reports.css">
    <span tal:replace='structure string:<style>'/>
        /* The default style */
        @page {
            @frame {
                margin: 2cm;
                top :3.6cm;
            }
            @frame header {
                -pdf-frame-content: headerContent;
                top :1cm;
                margin-left: 2cm;
                margin-right: 2cm; 
                height: 4.2cm;
            }
            @frame footer {
                -pdf-frame-content: pageNumber;
                height: 1cm;
                bottom: 1cm;
                margin-left: 2cm;
                margin-right: 2cm;
            }
        }
    <span tal:replace='structure string:</style>'/>

<body>
    <div id="headerContent">
        <table class="order-font">
            <tr></tr>
            <tr>
                <td style="width: 150px">To Messers.</td>
                <td class="bold" style="width: 200px; text-align:left" tal:content="order.Client.Name|nothing"></td>
                <td class="bold" style="width: 100px; text-align:left">Order ${order.ID}</td>
                <td class="bold" style="width: 200px; text-align:right">${order_date}</td>
            </tr>
            <tr>
                <td style="width: 150px">Supplier FaxNo</td>
                <td class="bold" style="width: 200px; text-align:left">${order.Supplier.Fax}</td>
                <td style="width: 100px; text-align:left">Created By</td>
                <td class="bold" style="width: 200px; text-align:right"></td>
            </tr>
            <tr>
                <td style="width: 150px">On behalf of</td>
                <td class="bold" style="width: 200px; text-align:left"></td>
                <td class="bold" style="width: 400px; text-align:left">${order.Project.Name}</td>
            </tr>
        </table>
        <div>&nbsp;</div>
        <table class="order-font">
            <tr style="border-top: 1px solid #000;">
                <td></td>
            </tr>
            <tr style="border-bottom: 1px solid #000;">
                <th class="bold" style="width: 450px; text-align:left">Description</th>
                <th class="bold" style="width: 70px; text-align:right">Unit</th> 
                <th class="bold" style="width: 90px; text-align:right">Quantity</th>
                <th class="bold" style="width: 80px; text-align:right">Rate</th>
                <th class="bold" style="width: 120px; text-align:right">Total</th>
            </tr>
        </table>
    </div>
    <table class="order-font">
        <tr tal:repeat="order_item order_items">
            <td style="width: 450px" tal:content="order_item['name']|nothing"></td>
            <td style="width: 70px; text-align:right" tal:content="order_item['unit']|nothing" ></td>
            <td style="width: 90px; text-align:right" tal:content="order_item['quantity']|nothing" ></td>
            <td style="width: 80px; text-align:right" tal:content="order_item['rate']|nothing" ></td>
            <td style="width: 120px; text-align:right" tal:content="order_item['total']|nothing" ></td>            
        </tr>
        <tr style="border-bottom: 1px solid #000;">
            <td></td>
        </tr>
    </table>
    <table class="order-font">
        <tr></tr>
        <tr>
            <td style="width: 200px">Authorisation</td>
            <td style="width: 400px; text-align:left">Signature: __________________________</td>
            <td style="width: 100px; text-align:left">Subtotal</td>
            <td style="width: 100px; text-align:right">${totals[0]}</td>
        </tr>
        <tr>
            <td style="width: 200px"></td>
            <td style="width: 400px; text-align:left"></td>
            <td style="width: 100px; text-align:left">Vat</td>
            <td style="width: 100px; text-align:right">${totals[1]}</td>
        </tr>
        <tr>
            <td style="width: 200px"></td>
            <td style="width: 400px; text-align:left"></td>
            <td style="width: 100px; text-align:left">Total Cost</td>
            <td class="bold" style="width: 100px; text-align:right">${totals[2]}</td>
        </tr>
    </table>

    <div id="pageNumber">
        <pdf:pagenumber>
    </div>
</body>
</html>
