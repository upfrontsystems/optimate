<html>

    <link rel="stylesheet" tal:attributes="href string:${request.application_url}/static/css/reports.css">
    <span tal:replace='structure string:<style>'/>
        /* The default style */
        @page {
            @frame {
                margin: 2cm;
                top :1.5cm;
                bottom: 1cm;
            }
            @frame header {
                -pdf-frame-content: headerContent;
                top: 0.5cm;
                height: 3cm;
                margin-left: 1cm;
                margin-right: 1cm;
            }
            @frame footer {
                -pdf-frame-content: footerContent;
                bottom: 0.5cm;
                height: 2.5cm;
                margin-left: 1cm;
                margin-right: 1cm;
            }
        }
    <span tal:replace='structure string:</style>'/>

<body>
    <div id="headerContent">
        <img class="image-content" src='${company_info.Header}'/>
        <h1>Project Cashflow Projection for ${project.Name}</h1>
    </div>

    <table class="order-font">
        <tr></tr>
        <tr>
            <td style="width:70px;">To:</td>
            <td class="bold" style="width: 400px;" tal:content="client.Name|nothing"></td>
            <td style="width:60px;"></td>
            <td colspan="2">TRE Bank Details</td>
        </tr>
        <tr>
            <td>Date:</td>
            <td class="bold">${today}</td>
            <td></td>
            <td style="width: 100px;">Bank:</td>
            <td class="bold" style="width: 300px;">${company_info.BankName}</td>
        </tr>
        <tr>
            <td>Project:</td>
            <td class="bold">${project.Name}</td>
            <td></td>
            <td>Bank Code:</td>
            <td class="bold">${company_info.BranchCode}</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>Account:</td>
            <td class="bold">${company_info.AccountName}</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>Account No:</td>
            <td class="bold">${company_info.AccountNo}</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>TRE VAT no</td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>Client VAT no:</td>
            <td></td>
        </tr>
    </table>
    <div>&nbsp;</div>
    <div tal:repeat="group groups">
        <table class="order-font">
            <tr style="border-top: 1px solid #000;">
                <th></th>
            </tr>
            <tr>
                <th></th>
                <th></th>
                <th class="bold" style="width: 400px; text-align:right" colspan="2" tal:repeat="date group['dateheader']">
                    ${date}
                </th>
            </tr>
            <tr style="border-bottom: 1px solid #000;">
                <th class="bold" style="width: 400px; text-align:left" tal:repeat="header headers">
                    ${header}
                </th>
            </tr>
            <tr><th></th></tr>
        </table>
        <table class="order-font">
            <tr tal:repeat="row group['rows']">
                <td class="bold" style="width: 400px; text-align:left">${row[0][0]}</td>
                <td class="bold" style="width: 200px; text-align:right">${currency + '{:20,.2f}'.format(float(row[0][1])).strip()|nothing}</td>
                <span tal:repeat="cell row[1:]">
                    <td style="width: 100px; text-align:right">${str(cell[0]) + '%'}</td>
                    <td style="width: 400px; text-align:right">${currency + '{:20,.2f}'.format(float(cell[1])).strip()|nothing}</td>
                </span>
            </tr>
        </table>
    </div>

    <div id="footerContent">
        <table>
            <tr>
                <td style="text-align:left; width: 800px;"><h3>Cashflow for ${project.Name}</h3></td>
                <td style="text-align:right;"><h3>${print_date}</h3></td>
            </tr>
        </table>
        <img class="image-content" src='${company_info.Footer}'/>
        <br>
        <pdf:pagenumber>
    </div>
</body>
</html>
